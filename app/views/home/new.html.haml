
= render 'shared/header'
.new
  .new__post
    .new__post__box
      .new__post__box__title 投稿する
      .new__post__box__detail
        = form_tag('/home', method: :post) do
          %input{:name => "name", :placeholder => "ラケット", :type => "text"}/
