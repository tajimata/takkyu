          %input{:name => "rubber_back", :placeholder => "ラバー（裏）", :type => "text"}/
          %input{:name => "power", :placeholder => "スピード", :type => "integer"}/
          %input{:name => "spin", :placeholder => "スピン", :type => "integer"}/
          %input{:name => "control", :placeholder => "コントロール", :type => "integer"}/
          %input{:name => "weight", :placeholder => "重量", :type => "integer"}/
          %input{:name => "general", :placeholder => "総合", :type => "integer"}/
